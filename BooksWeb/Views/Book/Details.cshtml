@using TeamB.BookManagement
@model Book

<div>
    <div id="aboutbook">

        <div id="booksection">
            <div>
                <div class='col col-md-4' id="bookimg">
                    <img src="@Model.Cover_Photo" class="author-details-photo" />
                    <h2 class="book-details">@Model.Title</h2>
                </div>
            </div>

            <div class='col col-md-8' id="bookdecription">

                <div id="editdecription">
                    <h3 style="color:white">Description</h3>
                    <a asp-action="edit" asp-route-id="@Model.Id" class="btn  btn-warning btn-card book-edit">EDIT</a>
                </div>

                <div id="bookdetailsbox">
                    <p style="color:black">@Model.Description</p>
                </div>

            </div>

        </div>

    </div>

    <div id="reviews">
    </div>

</div>

