@using TeamB.BookManagement
@model Author

<div>
    <div id="aboutauthor">

        <div id="authorsection">
            <div class="author-details">
                <div class='col col-md-4' id="authorimg">
                    <img src="@Model.Photo" class="author-details-photo" />
                    <h2>@Model.Name</h2>
                </div>
            </div>

            <div class='col col-md-8' id="authorbio">

                <div id="editbio">
                    <h3 style="color:white">Biography</h3>
                    <a asp-action="edit" asp-route-id="@Model.Id" class="btn  btn-warning btn-card">EDIT</a>
                </div>

                <div id="authordetailsbox">
                    <p style="color:black">@Model.Biography</p>
                </div>

            </div>

        </div>

    </div>

    <div id="listofbooks">
    </div>

</div>

