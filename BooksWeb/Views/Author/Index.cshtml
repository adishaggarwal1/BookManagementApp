@model IEnumerable<TeamB.BookManagement.Author>

<section id="authortoprow">
    @*<div >*@
    <img src="~/images/AuthorIndexImg.png" width="100%">
    @*</div>*@

    <h2 style="text-align:center">RECOMMENDED AUTHORS</h2>

    @*<div class="row">*@
    <div id="arrowbuttons">

        <div>
            <svg id="leftarrow" xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="white" class="bi bi-caret-left-fill" viewBox="0 0 16 16">
                <path d="m3.86 8.753 5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z" />
            </svg>
        </div>
    
        <div >
            <svg  id="rightarrow" xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="white" class="bi bi-caret-right-fill" viewBox="0 0 16 16">
                <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z" />
            </svg>
        </div>

    </div>
    <div class="scrolling-wrapper row flex-row flex-nowrap mt-0 pb-0 pt-2" id="horizontalscroll">

        
        @foreach (var author in Model)
        {
            <div class='col col-md-3'>
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@author.Photo" alt="Card image cap">
                    <div class="card card-block card-1">
                        <h5 class="card-title" style="text-align:center">@author.Name</h5>
                        <p class="card-text" style="text-align:center">Author Biography</p>
                        <div class="">
                            <a asp-action="authordetails" asp-route-id="@author.Id" class="btn  btn-info btn-card">DETAILS</a>
                            
                            <a asp-action="delete" asp-route-id="@author.Id" class="btn  btn-danger btn-card" onclick="return confirm('⚠️Are you sure you want to delete this item?')">DELETE</a>
                            <a asp-action="edit" asp-route-id="@author.Id" class="btn  btn-warning btn-card ">EDIT</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    

</section>

<a asp-action="Add" class='btn-primary btn btn-sm add-new'>Add New</a>

